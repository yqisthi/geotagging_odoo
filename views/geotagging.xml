<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_geotagging_odoo" model="ir.actions.act_window">
    <field name="name">Geotagging Odoo</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">geotagging</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create New Geotagging
      </p>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_geotagging_form" model="ir.ui.view">
    <field name="name">geotagging.form</field>
    <field name="model">geotagging</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="latitude" />
            <field name="longitude" />
            <script type="text/javascript">
              <![CDATA[
                $(document).ready(function () {
                  // Example usage
                  var data = {
                    field_name: 'New Value', // Replace with the appropriate field name and value
                  };

                  var controller = new geotagging.geolatlong();
                  controller.sendDataToServer(data)
                    .then(function () {
                      console.log('Data injected successfully');
                    })
                    .fail(function (error) {
                      console.error('Error injecting data:', error);
                    });
                });
              ]]>
          </script>

          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record id="view_geotagging_tree" model="ir.ui.view">
    <field name="name">geotagging.tree</field>
    <field name="model">geotagging</field>
    <field name="arch" type="xml">
      <tree>
        <field name="latitude" />
        <field name="longitude" />
      </tree>
    </field>
  </record>

</odoo>